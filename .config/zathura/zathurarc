set selection-clipboard clipboard
set guioptions none   # no status bar by default

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

# stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 50

# better controls
map \< goto top
map \> goto bottom
map j navigate next
map k navigate previous
# In conjunction with automatically downloading stuff from the arXiv,
# this is quite useful.
map <A-BackSpace> exec "rm $FILE"

### zathurarc-light
set font                        "iosevka custom-10"
set default-bg                  "#32302F" #06
set default-fg                  "#202020" #01

set statusbar-fg                "#303030" #02
set statusbar-bg                "#B0B0B0" #04

set notification-error-bg       "#AC4142" #08
set notification-error-fg       "#E0E0E0" #06

set notification-warning-bg     "#AC4142" #08
set notification-warning-fg     "#E0E0E0" #06

set highlight-color             "#F4BF75" #0A
set highlight-active-color      "#AA759F" #08

set completion-highlight-fg     "#32302F" #05
set completion-highlight-bg     "#75B5AA" #0C

set completion-bg               "#D0D0D0" #05
set completion-fg               "#070707" #0C

set notification-bg             "#90A959" #0B
set notification-fg             "#F5F5F5" #07

#set recolor-lightcolor          "#B0B0B0" #06
set recolor-lightcolor          "#E0E0E0" #06
set recolor-darkcolor           "#020202" #02
set recolor                     "true"

# setting recolor-keephue true will keep any color your pdf has.  If it
# is set to false, it will just be shades of gray.
set recolor-keephue             "true"
